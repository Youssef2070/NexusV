    <div class="card">
        <h3>Nouvelle Publication</h3>
        <input type="text" id="post-content" placeholder="Que voulez-vous dire ?">
        <input type="text" id="video-url" placeholder="Lien vidéo direct (mp4, etc.)">
        <button class="btn-main" onclick="sendPost()">PUBLIER DANS L'EMPIRE</button>
    </div>

    <div id="feed" style="width: 100%; max-width: 450px;"></div>

    <script>
        // Ta configuration Supabase
        const SB_URL = "https://drrwmuzocggrhtvshpdg.supabase.co"; 
        const SB_KEY = "Sb_publishable__c1nOqAjS87Km-nWtjEkRg_UnMTWTdZ"; 
        const supabase = supabase.createClient(SB_URL, SB_KEY);

        // --- GESTION SOCIALE ---
        async function loadPosts() {
            const { data, error } = await supabase.from('Post').select('*').order('created_at', { ascending: false });
            const feed = document.getElementById('feed');
            if (data) {
                feed.innerHTML = "";
                data.forEach(post => {
                    feed.innerHTML += `
                        <div class="post-display">
                            <div class="post-content">${post.content}</div>
                            ${post.video_url ? `<video controls src="${post.video_url}"></video>` : ''}
                        </div>`;
                });
            }
        }

        async function sendPost() {
            const content = document.getElementById('post-content').value;
            const video = document.getElementById('video-url').value;
            if (!content) return alert("Écris un message !");

            const { error } = await supabase.from('Post').insert([{ content, video_url: video }]);
            if (error) alert("Erreur : " + error.message);
            else { 
                alert("Contenu propulsé !");
                document.getElementById('post-content').value = "";
                document.getElementById('video-url').value = "";
                loadPosts(); 
            }
        }

        // --- GESTION FINANCIÈRE ---
        function actionFinance(type) {
            let montant = prompt(`Entrez le montant pour le ${type} :`);
            if (montant && !isNaN(montant)) {
                alert(`${type} de ${montant} enregistré. En attente de validation par l'Empire.`);
                // Ici, on pourra plus tard lier à une table "Transactions"
            }
        }

        // Lancement
        loadPosts();
    </script>
